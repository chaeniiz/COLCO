<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chaeniiz.colco.ui.fragment.RegisterPersonalColorFragment"
    android:id="@+id/fragment_register_personal_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="당신의 퍼스널 컬러는\n무엇인가요?"
            android:textSize="14pt" />

        <RadioGroup
            android:id="@+id/rg_personal_color"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_spring_warm"
                        android:text="봄 웜"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_spring_warm_light"
                        android:layout_marginLeft="15dp"
                        android:text="봄 웜 라이트"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_spring_warm_bright"
                        android:layout_marginLeft="15dp"
                        android:text="봄 웜 브라이트"
                        android:textSize="7pt"
                        android:button="@null"/>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_summer_cool"
                        android:text="여름 쿨"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_summer_cool_light"
                        android:layout_marginLeft="15dp"
                        android:text="여름 쿨 라이트"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_summer_cool_mute"
                        android:layout_marginLeft="15dp"
                        android:text="여름 쿨 뮤트"
                        android:textSize="7pt"
                        android:button="@null"/>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_fall_warm"
                        android:text="가을 웜"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_fall_warm_mute"
                        android:layout_marginLeft="15dp"
                        android:text="가을 웜 뮤트"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_fall_warm_deep"
                        android:layout_marginLeft="15dp"
                        android:text="가을 웜 딥"
                        android:textSize="7pt"
                        android:button="@null"/>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_winter_cool"
                        android:text="겨울 쿨"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_winter_cool_deep"
                        android:layout_marginLeft="15dp"
                        android:text="겨울 쿨 딥"
                        android:textSize="7pt"
                        android:button="@null"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_winter_cool_bright"
                        android:layout_marginLeft="15dp"
                        android:text="겨울 쿨 브라이트"
                        android:textSize="7pt"
                        android:button="@null"/>
                </TableRow>

                <TableRow android:layout_marginTop="10dp">
                    <RadioButton
                        android:layout_span="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/rb_pc_null"
                        android:text="잘 모르겠어요"
                        android:textSize="7pt"
                        android:button="@null"/>
                </TableRow>

            </TableLayout>
        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
